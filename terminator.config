[global_config]
  title_hide_sizetext = True
  title_transmit_fg_color = "#282a36"
  title_transmit_bg_color = "#61ffca"
  title_receive_fg_color = "#282a36"
  title_receive_bg_color = "#ffca85"
  title_inactive_fg_color = "#edecee"
  title_inactive_bg_color = "#44475a"
  inactive_color_offset = 1.0
  suppress_multiple_term_dialog = True
[keybindings]
[profiles]
  [[default]]
    icon_bell = False
    background_color = "#282a36"
    background_darkness = 0.75
    background_type = transparent
    cursor_color = "#f8f8f2"
    cursor_color_fg = False
    font = JetBrains Mono 12
    foreground_color = "#edecee"
    show_titlebar = False
    scrollbar_position = hidden
    scrollback_lines = 10000
    palette = "#110f18:#ff6767:#61ffca:#ffca85:#a277ff:#a277ff:#61ffca:#edecee:#6d6d6d:#ffca85:#a277ff:#ffca85:#a277ff:#a277ff:#61ffca:#edecee"
    use_system_font = False
[layouts]
  [[default]]
    [[[window0]]]
      type = Window
      parent = ""
    [[[child1]]]
      type = Terminal
      parent = window0
[plugins]


